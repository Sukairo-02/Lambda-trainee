{
  "$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"module": "CommonJS",
		"rootDir": "./src/",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@tasks/*": ["tasks/*"],
			"@util/*": ["util/*"]
		},
  		"outDir": "./compiled/",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": false
	}
}
